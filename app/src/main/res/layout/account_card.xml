<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:padding="@dimen/activity_horizontal_margin"
    android:elevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/album_cover_height"
            android:layout_height="@dimen/album_cover_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:layout_margin="16dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/bitcoinlogo" />

        <TextView
            android:id="@+id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/thumbnail"
            android:paddingTop="@dimen/account_name_padding"
            android:textColor="@color/accountName"
            android:text="PLACEHOLDER NAME"
            android:textSize="@dimen/album_title" />

        <TextView
            android:id="@+id/accountAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/thumbnail"
            android:layout_below="@+id/accountName"
            android:text="PLACEHOLDER ADDRESS" />

        <TextView
            android:id="@+id/accountBalance"
            android:layout_below="@+id/accountAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/thumbnail"
            android:text="PLACEHOLDER BALANCE" />

        <ImageView
            android:id="@+id/overflow"
            android:layout_width="@dimen/ic_album_overflow_width"
            android:layout_height="@dimen/ic_album_overflow_height"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dots" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

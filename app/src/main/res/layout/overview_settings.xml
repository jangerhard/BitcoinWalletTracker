<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:id="@+id/totalOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/bSettingsClose"
            android:layout_width="@dimen/ic_album_overflow_width"
            android:layout_height="@dimen/ic_album_overflow_height"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_expand_less_white_48dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bSettingsClose"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <TextView
                android:id="@+id/tv_exchange_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/bChangeCurrency"
                android:text="1 BTC = xxx"
                android:textColor="@color/colorCardsText"
                android:textStyle="italic" />

            <Button
                android:id="@+id/bChangeCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Change Currency" />

            <TextView
                android:id="@+id/tv_total_investment_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/bAddInvestment"
                android:layout_below="@id/tv_exchange_rate"
                android:layout_centerVertical="true"
                android:text="xxx kr"
                android:textColor="@color/colorCardsText"
                android:textStyle="italic" />

            <Button
                android:id="@+id/bAddInvestment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/bChangeCurrency"
                android:layout_centerVertical="true"
                android:text="Add investment" />

            <CheckBox
                android:id="@+id/checkbox_darktheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bAddInvestment"
                android:layout_centerHorizontal="true"
                android:checked="true"
                android:text="Dark Theme"
                android:textColor="@color/colorCardsText" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_thumbnailFolded"
            android:layout_width="@dimen/album_cover_height"
            android:layout_height="@dimen/album_cover_height"
            android:layout_margin="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:foregroundGravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/bitcoinlogo"
            android:focusable="true" />

        <TextView
            android:id="@+id/tvAccountNameFolded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/im_thumbnailFolded"
            android:paddingTop="@dimen/account_name_padding"
            android:text="PLACEHOLDER NAME"
            android:textColor="@color/accountName"
            android:textSize="@dimen/album_title" />

        <TextView
            android:id="@+id/tvAccountBalanceFolded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/im_thumbnailFolded"
            android:layout_toEndOf="@+id/im_thumbnailFolded"
            android:paddingBottom="@dimen/account_name_padding"
            android:text="0.00 BTC" />

        <TextView
            android:id="@+id/tvAccountRateFolded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAccountBalanceFolded"
            android:layout_alignBottom="@+id/tvAccountBalanceFolded"
            android:layout_toStartOf="@+id/im_OverflowFolded"
            android:paddingBottom="@dimen/account_name_padding"
            android:text="1000kr" />

        <ImageView
            android:id="@+id/im_OverflowFolded"
            android:layout_width="@dimen/ic_album_overflow_width"
            android:layout_height="@dimen/ic_album_overflow_height"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dots" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
